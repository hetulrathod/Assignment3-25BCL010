#include <stdio.h>
int main() {
    int arr[20], n, i, j, val, found = 0;

    printf("Enter number of elements (max 20): ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter the value to delete: ");
    scanf("%d", &val);

    for(i = 0; i < n; i++) {
        if(arr[i] == val) {
            found = 1;
            for(j = i; j < n - 1; j++) {
                arr[j] = arr[j + 1];
            }
            n--;    
            i--;
        }
    }

    if(!found) {
        printf("Value %d not found in the array.\n", val);
    }
    else {
        printf("Array after deletion:\n");
        for(i = 0; i < n; i++) {
            printf("%d ", arr[i]);
        }
        printf("\n");
    }

    return 0;
}
