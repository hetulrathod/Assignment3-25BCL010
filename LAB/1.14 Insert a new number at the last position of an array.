#include <stdio.h>
int main() {
    int arr[20];   
    int n, num, i;

    printf("Enter number of elements (max 19): ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter the new number to insert at last: ");
    scanf("%d", &num);

    arr[n] = num;
    n++;  

    printf("Array after insertion at last:\n");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
}
