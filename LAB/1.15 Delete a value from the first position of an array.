#include <stdio.h>
int main() {
    int arr[20];
    int n, i;

    printf("Enter number of elements (max 20): ");
    scanf("%d", &n);

    if(n <= 0) {
        printf("Array is empty!\n");
        return 0;
    }

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    for(i = 0; i < n-1; i++) {
        arr[i] = arr[i+1];
    }
    n--;

    printf("Array after deleting first element:\n");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
}
