#include <stdio.h>
int main() {
    int arr[20], n, i, val, found = 0;

    printf("Enter number of elements (max 20): ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter the value to search: ");
    scanf("%d", &val);

    for(i = 0; i < n; i++) {
        if(arr[i] == val) {
            printf("Value %d found at position %d.\n", val, i + 1);
            found = 1;
            break; 
        }
    }

    if(!found) {
        printf("Value %d not found in the array.\n", val);
    }

    return 0;
}
